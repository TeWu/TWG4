<%= simple_form_for [@album, photo], validate: true do |f| %>
  <section class="form-fields">
    <%= field_set do %>
      <%= f.input :image %>
      <%= f.input :description %>
    <% end %>
  </section>

  <hr/>
  <section class="form-actions">
    <%= f.button :submit %>
  </section>
<% end %>
