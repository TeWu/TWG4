<%= simple_form_for user, validate: true do |f| %>
  <section class="form-fields">
    <%= field_set do %>
      <%= f.input :display_name %>
      <%= f.input :username %>
      <%= f.input :password %>
      <%= f.input :password_confirmation %>
    <% end %>
  </section>

  <hr/>
  <section class="form-actions">
    <%= f.button :submit %>
  </section>
<% end %>