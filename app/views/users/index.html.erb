<% self.title = "Users" %>
<h1>Users</h1>

<table>
  <thead>
  <tr>
    <th>Display name</th>
    <th>Username</th>
    <th>Passhash</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.display_name %></td>
      <td><%= user.username %></td>
      <td><%= user.passhash %></td>
      <td><%= show_link user %></td>
      <td><%= edit_link user %></td>
      <td><%= destroy_button user %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>
<%= create_button User %>
